{% extends "base.html.twig" %}

{% block title %}
    Mes commandes
{% endblock %}

{% block body %}
    <h1>Mes commabdes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>N° </th>
                <th>Adresse </th>
                <th>Date de commande</th>
                <th>Produits</th>
                <th>Total</th>
            </tr>
        </thead>

        <tbody>
            {% for p in purchase %}
                <tr>
                    <td> {{ p.id}} </td>
                    <td> {{ p.adress }} <br> {{ p.postalCode }}, {{ p.city }} </td>
                    <td> {{ p.purchasedAt | date('d/m/y H:i')}}</td>
                    <td>
                        <ul>
                            {% for item in p.purchaseItems %}
                                <li>{{ item.quantity }} x {{ item.productName }} ( {{ item.total / 100 }} €)</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td> {{ p.total /100 }} € </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
  
{% endblock %}